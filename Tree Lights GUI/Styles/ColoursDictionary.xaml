<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Colours-->

    <Color x:Key="PrimaryGreen">
        #00FF00
    </Color>
    <Color x:Key="PrimaryYellow" >
        #EEFF00
    </Color>

    <Color x:Key="PrimaryGrey">
        #242424
    </Color>
    <Color x:Key="SecondaryGrey" >
        #414141
    </Color>

    <Color x:Key="PrimaryWhite">
        WhiteSmoke
    </Color>

    <SolidColorBrush x:Key="PrimaryGreenBrush" Color="{StaticResource PrimaryGreen}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource PrimaryYellow}"/>
    <SolidColorBrush x:Key="PrimaryWhiteBrush" Color="{StaticResource PrimaryWhite}"/>
    <SolidColorBrush x:Key="PrimaryGreyBrush" Color="{StaticResource PrimaryGrey}"/>
    <SolidColorBrush x:Key="SecondaryGreyBrush" Color="{StaticResource SecondaryGrey}"/>

    <LinearGradientBrush x:Key="GreenYellowGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00FF00" Offset="0"/>
        <GradientStop Color="#EEFF00" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GreyGradientBrush" StartPoint="1,0" EndPoint="0,1">
        <GradientStop Color="#111111" Offset="0"/>
        <GradientStop Color="#414141" Offset="1"/>
    </LinearGradientBrush>


</ResourceDictionary>